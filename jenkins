
pipeline {
    agent any
    tools {
        jdk 'jdk8'
        maven 'maven3'
    }
    stages {
        stage('Install') {
            steps {
                sh "mvn clean test"
            }
            post {
                always {
                    junit '**/target/*-reports/TEST-*.xml'
                }
            }
        }
        stage('package jar') {
            steps {
                sh "mvn package"
            }
        }
        stage('create image') {
            steps {
                sh "docker build --no-cache --rm --tag oltranzltd/tester:v1 ."
            }
        }
        stage('dockerhub login') {
            steps {
                sh "docker login --username=oltranzltd --password=5TG-aDb-Pcu-wMR"
            }
        }
        stage('push image') {
            steps {
                sh "docker push oltranzltd/tester:v1"
            }
        }
    }
}